@model Cliente
@{
    ViewData["Title"] = "Login";
}

<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-4">
            <h3 class="subtitle-doc">
                Login
            </h3>
            <div id="code_login_1">
                <div class="card">
                    @if (TempData["MsgErro"] != null)
                    {
                        <p class="alert alert-danger m-3">@TempData["MsgErro"]</p>
                    }
                    <article class="card-body">
                        <a class="float-right btn btn-outline-primary" asp-controller="Home" asp-action="CadastroCliente">Cadastre-se</a>
                        <h4 class="card-title mb-4 mt-1">Entrar</h4>
                        <form method="post">
                            <div class="form-group">
                                <label for="email">Seu email</label>
                                <input asp-for="Email" id="email" class="form-control" placeholder="Email" type="email">
                            </div>
                            <div class="form-group">
                                <a class="float-right" href="#">Esqueceu sua senha?</a>
                                <label for="senha">Sua senha</label>
                                <input asp-for="Senha" id="senha" class="form-control" placeholder="******" type="password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Acessar </button>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </aside>
    </section>
</main>