@model Cliente

@{
    ViewData["Title"] = "CadastroCliente";
}

<form asp-action="CadastroCliente" asp-controller="Home" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Cadastro de Cliente
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-action="Login" asp-controller="Home" class="float-right btn btn-outline-primary mt-1">Logar</a>
                                <h4 class="card-title mt-2">Entrar</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MsgSucesso"] != null)
                                {
                                <p class="alert alert-success">@TempData["MsgSucesso"]</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label for="Nome">Nome</label>
                                        <input asp-for="Nome" id="Nome" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="Nome"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label for="Nascimento">Data de nascimento</label>
                                        <input asp-for="Nascimento" type="date" id="Nascimento" class="form-control" placeholder="">
                                        <span asp-validation-for="Nascimento"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                    <span asp-validation-for="Sexo"></span>
                                </div>
                                <div class="form-group">
                                    <label for="CPF">CPF</label>
                                    <input asp-for="CPF" type="text" id="CPF" class="form-control" placeholder="">
                                    <span asp-validation-for="CPF"></span>
                                </div>
                                <div class="form-group">
                                    <label for="Telefone">Telefone</label>
                                    <input asp-for="Telefone" type="tel" id="Telefone" class="form-control" placeholder="">

                                    <span asp-validation-for="Telefone"></span>
                                </div>
                                <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input asp-for="Email" type="email" id="Email" class="form-control" placeholder="">

                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label for="Senha">Senha</label>
                                    <input asp-for="Senha" id="Senha" class="form-control" type="password">
                                    <span asp-validation-for="Senha"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Registrar-se </button>
                                </div>
                            </article>
                            <div class="border-top card-body text-center">Já possui uma conta? <a asp-action="Login" asp-controller="Home">Logar</a></div>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>