@model Colaborador

<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do colaborador">
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" placeholder="Digite o e-mail do colaborador">
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> @(Model != null ? "Atualizar" : "Cadastrar")</button>
<a asp-action="Index" class="btn btn-outline-dark"><i class="fas fa-angle-double-left"></i> Voltar para lista de categorias</a>