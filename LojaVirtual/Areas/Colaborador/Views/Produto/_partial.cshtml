@model Produto

<div asp-validation-summary="All" style="color: #f10707"></div>
<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria">
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Descricao"></label>
    <textarea asp-for="Descricao" class="form-control"></textarea>
    <span asp-validation-for="Descricao" class="text-danger"></span>
</div>
<div class="row">
    <div class="form-group col-2">
        <label asp-for="Valor"></label>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">R$</span>
            <input asp-for="Valor" class="form-control" placeholder="Informe o preço">
        </div>
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>
    <div class="form-group col-2">
        <label asp-for="Quantidade"></label>
        <div class="input-group mb-3">
            <input asp-for="Quantidade" class="form-control">
            <span class="input-group-text" id="basic-addon1">unid</span>
        </div>
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>
    <div class="form-group col-2">
        <label asp-for="Peso"></label>
        <div class="input-group mb-3">
            <input asp-for="Peso" class="form-control">
            <span class="input-group-text" id="basic-addon1">Kg</span>
        </div>
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>
    <div class="form-group col-2">
        <label asp-for="Largura"></label>
        <div class="input-group mb-3">
            <input asp-for="Largura" class="form-control">
            <span class="input-group-text" id="basic-addon1">cm</span>
        </div>
        <span asp-validation-for="Largura" class="text-danger"></span>
    </div>
    <div class="form-group col-2">
        <label asp-for="Altura"></label>
        <div class="input-group mb-3">
            <input asp-for="Altura" class="form-control">
            <span class="input-group-text" id="basic-addon1">cm</span>
        </div>
        <span asp-validation-for="Altura" class="text-danger"></span>
    </div>
    <div class="form-group col-2">
        <label asp-for="Comprimento"></label>
        <div class="input-group mb-3">
            <input asp-for="Comprimento" class="form-control">
            <span class="input-group-text" id="basic-addon1">cm</span>
        </div>
        <span asp-validation-for="Comprimento" class="text-danger"></span>
    </div>
</div>

<button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> @(Model != null ? "Atualizar" : "Cadastrar")</button>
<a asp-action="Index" class="btn btn-outline-dark"><i class="fas fa-angle-double-left"></i> Voltar para lista de produtos</a>
